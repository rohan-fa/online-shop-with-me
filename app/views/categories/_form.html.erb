
<div class="container">

<%= form_for @category do |f| %>
<div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :required => true, :class => 'form-control' %>
</div>
<div class="form-group">
    <%= f.label :image %>
    <%= f.url_field :image, :class => 'form-control' %>
</div>


<%= f.submit :class => 'btn btn-warning' %>

<% end %>
</div>