
<h1><%= @category.title %></h1>


<ul>

<li>Title: <%= @category.title %></li>
<% if @category.products.present? %>
    <% @category.products.each do |product| %>
    <%= image_tag product.image, :class => 'feature' %>

        <li><%= link_to product.name, product %></li>
    <% end %>
<% end %>


</ul>

<% if @current_user.present? && @current_user.admin? %>
        <%= link_to "All users", users_path%>
        <%= link_to "category", new_category_path %>
        <%= link_to 'Edit category', edit_category_path(@category) %>
        <%= link_to 'Delete category', @category, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
<% end %>
     

<div class="controls">
    <%= link_to 'choose the product', category_path(@category) %>
    <%= button_to 'Back', categories_path, :method => 'get' %>

</div>

