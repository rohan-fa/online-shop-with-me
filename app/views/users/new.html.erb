<div class="container">
<div class="user-new">
<h1>Sign up</h1>

<% if @user.errors.any? %>
    <ol>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ol>
<% end %>

<div class= "input-field">

</div>
<%= form_for @user do |f| %>
<div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, :class => 'form-group' %>
    </div>
    <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'form-group' %>
     </div>
     <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => 'form-group' %>
    </div>
    <%= f.submit "Sign up!", :class => 'btn btn-info btn-lg' %>
<% end %>
</div>
</div>
</div>