<h2><%= @category.title %> /
    <%= @products.count %>
    Products
</h2>
<% @products.each do |product| %>
    <%= image_tag product.image, :class => 'thumb' if product.image.present? %>
    
    <ul>
        
        <li><%= link_to product.name, category_products_path %></li>
        <li>price $<%= product.price %></li>
  
    </ul>
<% end %>

