<div class="container"><% @categories.each do |category| %>
<h2><%= category.title %></h2>

<% end %>


<% @products.each do |product| %>
    <%= image_tag product.image, :class => 'thumb' if product.image.present? %>
    
    <ul>
        
        <li><%= link_to product.name, category_product_path(product.id) %></li>
        <li>price $<%= product.price %></li>
  
    </ul>
<% end %>
</div>