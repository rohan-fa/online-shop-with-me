<%= form_for @product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.label :image %>
    <%= f.url_field :image, :required => true %>

    <%= f.label :id %>
    <%= f.select :id, Product.pluck(:name, :id), :include_blank => true %>

    <%= f.submit %>
<% end %>