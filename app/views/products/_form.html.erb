<div class="container">
<%= form_for @product do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => 'form-group' %>
    </div>
    <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, :class => 'form-group' %>
    </div>
    <div class="form-group">
    <%= f.label :image %>
    <%= f.url_field :image, :required => true, :class => 'form-group' %>
    </div>
    <%= f.label :id %>
    <%= f.select :id, Product.pluck(:name, :id), :include_blank => true %>

    <%= f.submit, :class => 'btn btn-info btn-lg' %>
<% end %>
</div>
