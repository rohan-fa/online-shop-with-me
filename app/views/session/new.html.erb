
<div class="container">
<div>
<h1>Log In</h1>
<% if flash[:error].present? %>
    <h2><%= flash[:error] %></h2>
<% end %>

<div>
<%= form_tag login_path do %>
  <%= label_tag :email %>
    <%= email_field_tag :email, nil, :class => 'form-control' %>
</div>
    <div>
     <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => 'form-control' %></div>
   
    <%= submit_tag "Sign in", class: 'btn btn-primary' %>
     <% end %>

</div>



