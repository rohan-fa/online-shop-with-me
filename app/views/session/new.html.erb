<div class="container">

  <div class="user-new"> 
    <h1>Log In</h1>
      <% if flash[:error].present? %>
    <h2><%= flash[:error] %></h2>
<% end %>

<div class= "input-field">
<%= form_tag login_path do %>
<div class="form-group">
  <%= label_tag :email %>
    <%= email_field_tag :email, nil, :class => 'form-group' %>
</div>
</div>
    <div>
     <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => 'form-group' %></div>
   
    <%= submit_tag "Sign in", class: 'btn btn-info btn-lg' %>
     <% end %>

</div>



